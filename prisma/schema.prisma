generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  url         String
  content     String
  author      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
